<% include partials/header %>

<div class="container">
	<form class="col-md-6 col-md-offset-3" action="/login" method="POST">
		<legend>Log In or <a href="/register">Create a new account</a></legend>
		<div class="form-group">
			<label for="username">USN</label>
			<input class="form-control" type="text"	name="username" id="username" autofocus>
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input class="form-control" type="password"	name="password" id="password">
		</div>
		<div class="form-group">
			<button class="btn btn-primary" type="submit">Sign In</button>
			<a class="pull-right" href="/forgot">Forgot password?</a>
		</div>
	</form>
</div>

<% include partials/footer %>